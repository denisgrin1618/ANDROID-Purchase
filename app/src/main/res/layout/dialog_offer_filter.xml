<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/linear_layout_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginStart="5dp"

        >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Filter" />


        <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2" >

            <RadioButton
                android:id="@+id/radio_button_show_all_photos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:paddingTop="10dp"
                android:layout_weight="1"
                android:textSize="20dp"
                android:text="all photos" />

            <RadioButton
                android:id="@+id/radio_button_show_photos_where_products_equvel_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:textSize="20dp"
                android:text="photos where products = 0" />

            <RadioButton
                android:id="@+id/radio_button_show_photos_where_products_more_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:paddingTop="10dp"
                android:layout_weight="1"
                android:text="photos where products > 0"
                android:textSize="20dp"/>

            </RadioGroup>



        <Button
            android:id="@+id/dialog_offer_filter_button_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="25dp"
            android:layout_weight="1"
            android:background="@android:color/holo_green_dark"
            android:text="apply filter" />


    </LinearLayout>


</RelativeLayout>